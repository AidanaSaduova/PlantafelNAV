<UserControl x:Class="PlantafelNAV.Views.Timeline"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlantafelNAV.Views"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True"
             mc:Ignorable="d">
    <Border x:Name="border" BorderBrush="#FF001263" Background="#FFD4D4D4" BorderThickness="1" Height="100" Width="600">
        <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Hidden">
            <Canvas x:Name="mainCanvas" Margin="2">

            </Canvas>
        </ScrollViewer>
    </Border>
</UserControl>
